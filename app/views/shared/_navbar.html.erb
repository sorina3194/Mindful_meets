<div class="menu-wrap">
  <input type="checkbox" class="toggler">
  <% if user_signed_in? && InvitationNotification.where(user_id: current_user.id).present? %>
      <span class="toggler__badge"></span>
  <% end %>
  <div class="hamburger"><div></div></div>
    <div class="menu">
      <div>
        <div id="box">
          <ul id="items">
            <% if user_signed_in? %>
              <% if InvitationNotification.where(user_id: current_user.id).present? %>
                <li class="nav-item">
                  <%= link_to "Invitations", invitations_path, class:"dropdown-item"%><div id="badge"></div>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to "Invitations", invitations_path, class: "dropdown-item"%>
                </li>
              <% end %>
              <li class="nav-item">
                <%= link_to "Chat Session Last", chat_sessions_path, class: "nav-link" %>
              </li>
              <% unless current_user.chat_sessions.empty?%>
                <li class="nav-item">
                  <%= link_to "Chat Sessions All", feedback_chat_session_path(current_user.chat_sessions.last), class: "nav-link" %>
                </li>
              <% end %>
              <li>
                <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "dropdown-item" %>
              </li>
            <% else %>
              <li class="nav-item">
                <%= link_to "Login", new_user_session_path, class: "nav-link" %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>

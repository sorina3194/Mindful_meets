<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

<div id="footer">
  <%# Back Home %>
  <%= link_to root_path do %>
    <span class="material-symbols-outlined" <% link_to "Home" %>>
      home
    </span>
  <% end %>

  <%# My Friends %>
  <%# Notification goes here %>

  <% if current_user.friendships.where(status: "pending") %>
    <%= link_to friendships_path, style:"color:red" do %>
      <span id="badge" class="material-symbols-outlined" <% link_to "Friendships" %>>
        diversity_2
      </span>
    <% end %>
  <% else %>
    <%= link_to friendships_path do %>
      <span class="material-symbols-outlined" <% link_to "Friendships" %>>
        diversity_2
      </span>
    <% end %>
  <% end %>

  <%# My Profile %>
  <% if user_signed_in? %>
    <%= link_to showprofile_path(current_user.id) do %>
      <span class="material-symbols-outlined" >
        person
      </span>
    <% end %>
  <% end %>


<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,300&display=swap" rel="stylesheet">
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0" />

<div class="container" id="profile-background">


  <div class="profile-center mt-5 py-4">
    <div id="carouselExample" class="carousel slide">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag@profile.photo.key, class: "d-block w-100", width: 366, height: 275, crop: :thumb, gravity: :face %>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/1/18/Dog_Breeds.jpg" alt= "First photo">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100", width=366px, height=275px, src="https://images.immediate.co.uk/production/volatile/sites/23/2023/03/Blue-shark-facts-5efc1f5.jpg" alt="Second photo">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100", width=366px, height=275px, src="https://files.worldwildlife.org/wwfcmsprod/images/African_Elephant_Kenya_112367/story_full_width/qxyqxqjtu_WW187785.jpg" alt="Third photo">
        </div>
        <div class="carousel-item">
          <img class="d-block w-100", width=366px, height=275px, src="https://images.immediate.co.uk/production/volatile/sites/23/2019/12/GettyImages-138596308-ad71719.jpg" alt="Fourth photo">
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="visually-hidden">Next</span>
        </button>
      </div>
    </div>
  </div>

  <div class="profile-center-details m-3">
    <h3><%= @profile.biography %></h3>
  </div>


  <div class="profile-1 d-flex justify-space-between">
    <div class="profile-1-details d-flex justify-content-space-around">
      <div class="me-3 grey-background">
        <label for="age" class="me-1"></label><%= @profile.age %>
      </div>
      <div class="me-3 grey-background">
        <label for="city" class="me-1"> Lives in</label><%= @profile.city %>
      </div>
    </div>
    <div class="profile-1-animal grey-background">
      <label for="favorite_animal" class="me-1">Favorite Animal:</label><%= @profile.favorite_animal %>
    </div>
  </div>


  <div class="profile-2 px-3">
    <div class="d-flex justify-content-between">
      <h3>Hobbies:</h3>
      <h3 class="ml-auto whitesmoke-background"><%= @profile.hobbies %></h3>
    </div>

    <div class="d-flex justify-content-between">
      <h3>Skills:</h3>
      <h3 class="ml-auto whitesmoke-background"><%= @profile.skills %></h3>
    </div>

    <div class="d-flex justify-content-between">
      <h3>Music:</h3>
      <h3 class="ml-auto whitesmoke-background"><%= @profile.music_genres %></h3>
    </div>

    <div class="d-flex justify-content-between">
      <h3>Books:</h3>
      <h3 class="ml-auto whitesmoke-background"><%= @profile.book_genres %></h3>
    </div>

    <div class="d-flex justify-content-between">
      <h3>:</h3>
      <h3 class="ml-auto whitesmoke-background"><%= @profile.movie_genres %></h3>
    </div>
  </div>
</div>

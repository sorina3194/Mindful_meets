
<div class="container">
  <div class="profile-center py-4">
    <div id="carouselExample" class="carousel slide">
      <div class="carousel-inner">
        <div class="carousel-item active">
          <%= cl_image_tag@profile.photo.key, class: "d-block w-100"%>
        </div>
        <div class="carousel-item">
          <img class="d-block w-100" src="https://upload.wikimedia.org/wikipedia/commons/1/18/Dog_Breeds.jpg" alt="Second photo">
        </div>
      </div>
      <button class="carousel-control-prev" type="button" data-bs-target="#carouselExample" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
      </button>
      <button class="carousel-control-next" type="button" data-bs-target="#carouselExample" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
      </button>
    </div>
  </div>

  <div class="profile-center-details m-3">
    <h3><%= @profile.biography %></h3>
  </div>


  <div class="profile-1 d-flex justify-space-between">
    <div class="profile-1-details d-flex justify-content-between">
      <div class="me-3 grey-background">
      <label for="age" class="me-1">Age</label><%= @profile.age %>
      </div>
      <div class="me-3 grey-background">
      <label for="city" class="me-1">City</label><%= @profile.city %>
      </div>
    </div>
    <div class="profile-1-animal grey-background">
    <label for="favorite_animal" class="me-1">Favorite Animal</label><%= @profile.favorite_animal %>
    </div>
  </div>


  <div class="profile-2 px-3">
    <div class="d-flex justify-content-between">
    <h3>HOBBIES:</h3>
    <h3 class="ml-auto whitesmoke-background"><%= @profile.hobbies %></h3>
    </div>

    <div class="d-flex justify-content-between">
    <h3>SKILLS:</h3>
    <h3 class="ml-auto whitesmoke-background"><%= @profile.skills %></h3>
    </div>

    <div class="d-flex justify-content-between">
    <h3>MUSIC:</h3>
    <h3 class="ml-auto whitesmoke-background"><%= @profile.music_genres %></h3>
    </div>

    <div class="d-flex justify-content-between">
    <h3>BOOKS:</h3>
    <h3 class="ml-auto whitesmoke-background"><%= @profile.hobbies %></h3>
    </div>

    <div class="d-flex justify-content-between">
    <h3>MOVIE:</h3>
    <h3 class="ml-auto whitesmoke-background"><%= @profile.movie_genres %></h3>
    </div>
  </div>
<%# <%= render "shared/footer" %>
</div>

<link href="https://fonts.googleapis.com/css2?family=Nunito+Sans:opsz,wght@6..12,300&display=swap" rel="stylesheet">
<h1 id="invitation_header">My Invitations</h1>
<div id="invitations">
  <% @my_invitations.each do |invitation| %>
  <div id="invitation">
    <h4><%= invitation.name %></h4>
    <h6 id="inv-time"><%= invitation.created_at.strftime("%B %d, %Y") %></h6>
    <div id="accept">
    <% if invitation.status != "accepted" %>
      <%= link_to "Accept", accept_chat_session_invitation_path(invitation.chat_session_id, invitation.id), data:{turbo_method: :patch} %>
    <% else %>
      <%= link_to "Accepted", disabled: true %>
    <% end %>
    </div>
  </div>
  <% end %>
</div>

<div class="my-container" data-controller="slider">
  <div class="slider">
    <div class="tabs">
      <input type="radio" id="radio-1" name="tabs" checked data-action="click->slider#openFriendships" />
      <label class="tab" for="radio-1" >Friends</label>
      <input type="radio" id="radio-2" name="tabs" data-action="click->slider#openRequests"/>
      <label class="tab" for="radio-2">Requests</label>
      <span class="glider"></span>
    </div>
  </div>
  <div class="partial-container">

    <div class="card-container" data-slider-target="friendshipsContainer">
      <%= render "friendships-partial" %>
    </div>

    <div class="card-container closed" data-slider-target="requestsContainer" >
      <%= render "requests-partial" %>
    </div>

  </div>
</div>
